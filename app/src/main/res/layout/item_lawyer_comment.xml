<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_lawyer_car"
        app:cardCornerRadius="25dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_law_comm_fromUserAvatar"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_law_comm_fromUserName"
        android:textSize="16sp"
        android:text="名字"
        android:textColor="@color/gray"
        android:layout_marginStart="@dimen/ten"
        android:layout_toRightOf="@+id/item_lawyer_car"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_law_evaluateContent"
        android:text="内容"
        android:layout_below="@+id/item_law_comm_fromUserName"
        android:layout_toRightOf="@+id/item_lawyer_car"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/ten"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_law_createTime"
        android:text="内容"
        android:layout_below="@+id/item_law_evaluateContent"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_below="@+id/item_law_createTime"
        android:layout_marginTop="@dimen/five"
        android:paddingHorizontal="16dp"/>
</RelativeLayout>