<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/acquiesce"
    tools:context=".ui.activity.VoInfoActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/vi_tb"
        app:navigationIcon="@drawable/ic_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_500">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="活动详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/white"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#323232"
                    android:text="名称:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vi_name"
                    android:layout_marginStart="60dp"
                    android:textColor="#323232"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#323232"
                    android:text="活动简介:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="暂无"
                    android:id="@+id/vi_context"
                    android:layout_marginStart="60dp"
                    android:textColor="#323232"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#323232"
                    android:text="开始时间:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vi_start"
                    android:layout_marginStart="60dp"
                    android:textColor="#323232"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#323232"
                    android:text="人员要求:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vi_require"
                    android:layout_marginStart="60dp"
                    android:textColor="#323232"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#323232"
                    android:text="承办单位:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vi_undertaker"
                    android:layout_marginStart="60dp"
                    android:textColor="#323232"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#323232"
                    android:text="工作内容:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vi_detail"
                    android:layout_marginStart="60dp"
                    android:textColor="#323232"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>