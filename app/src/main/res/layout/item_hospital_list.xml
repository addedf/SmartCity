<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:id="@+id/item_hospital_imgUrl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:maxLines="2"
        android:id="@+id/item_hospital_hospitalName"
        android:layout_marginStart="@dimen/five"
        android:layout_toRightOf="@+id/item_hospital_imgUrl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:maxLines="2"
        android:layout_marginStart="@dimen/five"
        android:layout_marginTop="2dp"
        android:id="@+id/item_hospital_level"
        android:layout_below="@+id/item_hospital_hospitalName"
        android:layout_toRightOf="@+id/item_hospital_imgUrl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:maxLines="2"
        android:layout_marginStart="@dimen/five"
        android:layout_marginTop="2dp"
        android:id="@+id/item_hospital_brief"
        android:layout_below="@+id/item_hospital_level"
        android:layout_toRightOf="@+id/item_hospital_imgUrl"/>
</RelativeLayout>