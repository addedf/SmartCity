<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/acquiesce"
    tools:context=".ui.activity.NewsInfoActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/news_info_tb"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/purple_500">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻详情"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/news_info_tb"
        android:layout_height="wrap_content"
        android:id="@+id/news_info_ScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:maxLines="2"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:id="@+id/news_info_title"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:id="@+id/news_info_createTime"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:id="@+id/news_info_updateTime"
                    android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_info_createTime"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论人数"
                        android:id="@+id/news_info_commentNum"
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点赞人数"
                        android:id="@+id/news_info_likeNum"
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="观看人数"
                        android:id="@+id/news_info_readNum"
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>
            </RelativeLayout>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/news_info_text"/>-->
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_info_view"/>
<!--            新闻评论列表-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="新闻评论"
                android:paddingHorizontal="@dimen/ten"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/aurantium"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_info_commentNum_list"/>
        </LinearLayout>
    </ScrollView>
    <!--    评论-->
<!--    android:layout_below="@+id/news_info_ScrollView"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="@dimen/ten"
        android:orientation="horizontal">
<!--        android:focusable="false"-->
<!--        android:focusableInTouchMode="false"-->
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/news_info_input"
            android:inputType="text"
            android:hint="请输入评论"
            android:background="@drawable/search_bg"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:id="@+id/news_info_btn"
            android:background="@drawable/search_btn"
            android:layout_marginLeft="@dimen/ten"/>
    </LinearLayout>
</RelativeLayout>