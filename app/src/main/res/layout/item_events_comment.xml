<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginTop="@dimen/five"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/item_even_comment_CardView"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_even_comment_avatar"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_comment_nickName"
        android:text="id"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/ten"
        android:layout_toRightOf="@+id/item_even_comment_CardView"
        android:maxLines="2"
        android:layout_marginTop="@dimen/ten"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_comment_content"
        android:text="内容"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/ten"
        android:textColor="@color/light_gray"
        android:layout_toRightOf="@+id/item_even_comment_CardView"
        android:layout_below="@+id/item_news_comment_nickName"
        android:maxLines="2"
        android:layout_marginTop="@dimen/ten"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_comment_createTime"
        android:text="内容"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/ten"
        android:textColor="@color/light_gray"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_news_comment_content"
        android:maxLines="2"
        android:layout_marginTop="@dimen/ten"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/ten"
        android:layout_below="@+id/item_news_comment_createTime"/>
</RelativeLayout>