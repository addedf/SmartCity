<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="@dimen/ten">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_del_postName"
        android:text="岗位"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司"
        android:layout_marginStart="@dimen/ten"
        android:layout_below="@+id/item_del_postName"
        android:textSize="14sp"
        android:id="@+id/item_del_companyName"
        android:textColor="@color/gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司"
        android:layout_marginStart="@dimen/ten"
        android:layout_below="@+id/item_del_companyName"
        android:textSize="14sp"
        android:id="@+id/item_del_satrTime"
        android:textColor="@color/gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_del_money"
        android:text="岗位"
        android:textColor="#FC3D66"
        android:layout_alignParentRight="true"
        android:textSize="18sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"
        android:paddingVertical="16dp"
        android:layout_below="@+id/item_del_satrTime"
        android:layout_marginTop="@dimen/ten"/>
</RelativeLayout>