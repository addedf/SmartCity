<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/ten"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:id="@+id/item_reg_imgUrl"
        android:src="@drawable/chengshi"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:id="@+id/item_reg_name"
        android:layout_marginStart="@dimen/five"
        android:layout_toRightOf="@+id/item_reg_imgUrl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:id="@+id/item_reg_sex"
        android:layout_marginTop="3dp"
        android:layout_marginStart="@dimen/five"
        android:layout_toRightOf="@+id/item_reg_imgUrl"
        android:layout_below="@+id/item_reg_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:id="@+id/item_reg_address"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/five"
        android:layout_toRightOf="@+id/item_reg_imgUrl"
        android:layout_below="@+id/item_reg_sex"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_below="@+id/item_reg_address"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="@dimen/ten"/>
</RelativeLayout>