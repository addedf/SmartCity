<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acquiesce"
    android:orientation="vertical"
    tools:context=".ui.activity.RegAddUserActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/purple_500"
        android:id="@+id/reg_add_user_tb">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约界面"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:gravity="end"
                    android:background="@null"
                    android:id="@+id/reg_add_user_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用:"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/reg_add_user_money"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门诊类型:"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/reg_add_user_rg"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/reg_add_user_specialist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专家号"/>
                    <RadioButton
                        android:id="@+id/reg_add_user_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通号"/>
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="点击选择就诊日期"
                android:textSize="16sp"
                android:textColor="@color/aurantium"
                android:id="@+id/reg_add_user_time"/>
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/search_btn"
                android:id="@+id/reg_add_user_btn"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>