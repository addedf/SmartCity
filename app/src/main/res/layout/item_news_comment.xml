<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="@dimen/five">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_comment_userName"
        android:text="名字"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_comment_content"
        android:text="评论内容"
        android:textSize="16sp"
        android:layout_below="@+id/item_news_comment_userName"
        android:layout_toRightOf="@+id/item_news_comment_userName"
        android:maxLines="2"
        android:layout_marginTop="@dimen/ten"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_comment_commentDate"
        android:text="评论时间"
        android:textSize="16sp"
        android:layout_below="@+id/item_news_comment_content"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:layout_marginTop="@dimen/ten"
        android:textColor="@color/aurantium"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/ten"
        android:layout_below="@+id/item_news_comment_commentDate"/>
</RelativeLayout>