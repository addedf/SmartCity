<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/acquiesce"
    tools:context=".ui.activity.HospitalnfoActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/hospital_tb"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/purple_500">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="医院详情"
           android:layout_gravity="center"
           android:textColor="@color/white"
           android:textSize="18sp"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/hospital_info_banner"/>
            <LinearLayout
                android:layout_marginTop="@dimen/five"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医院名:"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:id="@+id/hospital_info_hospitalName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/five"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="介绍:"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:id="@+id/hospital_info_brief"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/five"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星级:"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:id="@+id/hospital_info_level"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="预约挂号"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:id="@+id/hospital_info_btn"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>