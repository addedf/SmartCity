<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:id="@+id/item_pet_imageUrls"
        android:scaleType="centerCrop"
        android:src="@drawable/chengshi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_pet_question"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/item_pet_imageUrls"
        android:layout_marginStart="@dimen/five"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_pet_question"
        android:layout_toRightOf="@+id/item_pet_imageUrls"
        android:layout_marginStart="@dimen/five"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:id="@+id/tem_pet_createTime"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tem_pet_createTime"
        android:layout_toRightOf="@+id/item_pet_imageUrls"
        android:layout_marginStart="@dimen/five"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:id="@+id/tem_pet_name"/>
</RelativeLayout>