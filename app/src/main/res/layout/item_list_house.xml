<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:background="@color/white">
<!--    没有图片的默认加载本地的 -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:id="@+id/house_item_pic"
        android:src="@drawable/chengshi"
        android:scaleType="centerCrop"/>
<!--    android:layout_toRightOf="@+id/house_item_pic" 在指定id右侧-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_list_sourceName"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:maxLength="12"
            android:layout_toRightOf="@+id/house_item_pic"
            android:layout_marginStart="@dimen/ten"
            android:text=""/>
<!--    面积/金额-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/house_item_price"
        android:text=""
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/aurantium"
        android:layout_alignParentRight="true"/>
<!--    介绍 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/house_item_description"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        android:text=""
        android:layout_toRightOf="@+id/house_item_pic"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:maxLines="2"/>
</RelativeLayout>