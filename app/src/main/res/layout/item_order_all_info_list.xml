<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/ten">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:scaleType="centerCrop"
        android:id="@+id/item_order_all_info_productImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_toRightOf="@+id/item_order_all_info_productImage"
        android:layout_marginStart="@dimen/five"
        android:id="@+id/item_order_all_info_productName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:layout_toRightOf="@+id/item_order_all_info_productImage"
        android:layout_marginStart="@dimen/five"
        android:layout_below="@+id/item_order_all_info_productName"
        android:id="@+id/item_order_all_info_quantity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:id="@+id/item_order_all_info_totalPrice"
        android:textColor="@color/gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/item_order_all_info_productImage"
        android:layout_marginTop="@dimen/ten"/>
</RelativeLayout>